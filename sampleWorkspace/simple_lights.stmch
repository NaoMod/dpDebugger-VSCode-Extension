StateMachine SimpleLights {
    INITIAL -> Idle;

    state Idle {
        -> Green: 't' / {t=0;};
    }

    state Green {
        -> Green: 'tick' [t<5] / { t = t+1; };

        -> Orange: 'tick' [t=5] / { t = 0; };
    }

    state Orange {
        -> Orange: 'tick' [t<5] / { t = t+1; };

        -> Red: 'tick' [t=5] / { t = 0; };
    }

    state Red {
        -> Red: 'tick' [t<5] / { t = t+1; };

        -> Green: 'tick' [t=5] / { t = 0; };
    }
}